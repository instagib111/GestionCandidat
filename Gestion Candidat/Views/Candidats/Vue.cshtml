<div class="row">
    <div class="col-md-12">
        <table id="assets-data-table"
               class="table table-striped table-bordered"
               style="width:100%">
            @*<thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.DtModification)</th>
                        <th>@Html.DisplayNameFor(m => m.Humain.Prenom)</th>
