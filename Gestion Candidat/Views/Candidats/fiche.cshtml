@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    function toggleNewTache() {
        $('#tog-tache').slideToggle(150);
        togPlus($("#plus-tache"))
    }
    function toggleNewDoc() {
        $('#tog-doc').slideToggle(150);
        movePlusMinus($("#plus-doc"));
        togPlus($("#plus-doc"));
    }
    function toggleNewEvent() {
        $('#tog-event').slideToggle(150);
        togPlus($("#plus-event"))
    }
    function movePlusMinus(elm, file) {
        if (elm.attr('class').search('minus') > 0)
            elm.prev().insertAfter(elm); //up
        else
            elm.next().insertBefore(elm); //down
    }
    function togPlus(elm) {
        elm.toggleClass(' glyphicon-minus')
            .toggleClass(' glyphicon-plus')
    }
    function addTache() {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/ajouterTache",
                data: {
                    "tache.CdCandidat": $("#CdCandidat-tache").val(),
                    "tache.CdReceveur": $("#CdReceveur-tache").val(),
                    "tache.DtAction": $("#DtAction-tache").val(),
                    "tache.Details": $("#Details-tache").val()
                },
                success: function (data) {
                    window.location = window.location;
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function addDoc() {
        if ($("#fichier-doc")[0].files[0].size > 100000) {
            alert("le fichier est trop lourd")
            return 0;
        }
        let fd = new FormData()
        fd.append("doc", $("#fichier-doc")[0].files[0])
        fd.append("fichier.CdCandidat", $("#CdCandidat-doc").val())
        fd.append("fichier.TypFichier", $("#TypFichier-doc").val())
        fd.append("fichier.Nom", $("#Nom-doc").val())
        fd.append("fichier.LienPath", $("#LienPath-doc").val())
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/ajouterDoc",
                processData: false,
                contentType: false,
                data: fd,
                success: function (data) {
                    window.location = window.location;
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function suppDoc(id) {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/suppDoc",
                data: {
                    "fichier.CdFichier": id
                },
                success: function (data) {
                    $("#doc-row-" + id).slideToggle(100);
                    console.log(data)
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function addEvent() {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/ajouterEvent",
                data: {
                    "evenement.CdCandidat": $("#CdCandidat-event").val(),
                    "evenement.CdResp": $("#CdResp-event").val(),
                    "evenement.TypEvenement": $("#TypEvenement-event").val(),
                    "evenement.CommentaireEvenement": $("#Commentaire-event").val(),
                    "evenement.DtEvenement": $("#DtEvenement-event").val()
                },
                success: function (data) {
                    window.location = window.location;
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function suppEvent(i) {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/suppEvent",
                data: {
                    "evenement.CdEvenement": $("[name='EvenementCandidat[" + i + "].CdEvenement']").val()
                },
                success: function (data) {
                    $("#event-row-" + i).slideToggle(100);
                    //window.location = window.location;
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function getFav() {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/getFav",
                data: {
                    "fav.CdCandidat": "@Model.CdCandidat",
                    "fav.CdSalarie": "@ViewBag.User"
                },
                success: function (data) {
                    console.log(data.responseText)
                    if (data.responseText > 0)
                        switchStar(data.responseText)
                    else
                        switchStar()
                },
                error: function (e) {
                    console.log(e)
                    switchStar()
                }
            });
    }
    function addFav() {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/addFav",
                data: {
                    "fav.CdCandidat": "@Model.CdCandidat",
                    "fav.CdSalarie": "@ViewBag.User"
                },
                success: function (data) {
                    console.log(data.responseText)
                    switchStar(data.responseText)
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function suppFav(cdFavoris) {
        $.ajax(
            {
                type: "POST",
                url: "/Candidats/suppFav",
                data: {
                    "fav.CdFavoris": cdFavoris
                },
                success: function (data) {
                    switchStar()
                },
                error: function (e) {
                    console.log(e)
                }
            });
    }
    function switchStar(id) {
        if (id === undefined) { // supp fav
            $("#addFav").removeClass('hide-gen')
            $("#suppFav").addClass('hide-gen')
        } else { // add fav
            $("#suppFav").removeAttr('onclick').attr('onclick','suppFav('+id+')' )
            $("#addFav").addClass('hide-gen')
            $("#suppFav").removeClass('hide-gen')
        }
    }
    getFav();
        let param = {
            locale: 'fr',
            format: 'L'
        };
    $(function () {
        $('.datepicker').datetimepicker(param);
    });
